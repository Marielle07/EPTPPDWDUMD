{
  "name": "client",
  "private": true,
  "version": "0.0.0",
  "main": "electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\"",
    "watch:dev": "nodemon --exec npm run electron:dev",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder"
  },
  "nodemonConfig": {
    "watch": [
      "electron"
    ]
  },
  "dependencies": {
    "@quasar/extras": "^1.13.4",
    "@tensorflow/tfjs-node": "^3.15.0",
    "axios": "^0.26.1",
    "quasar": "^2.6.2",
    "serialport": "^9.2.8",
    "tiny-worker": "^2.3.0",
    "vite-plugin-electron-builder": "^0.1.0",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.0.7",
    "@vitejs/plugin-vue": "^2.2.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^18.0.0",
    "electron-builder": "^22.14.13",
    "electron-rebuild": "^3.2.7",
    "nodemon": "^2.0.15",
    "sass": "^1.32.0",
    "vite": "^2.8.0",
    "vite-plugin-electron-renderer": "^0.3.3",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
